<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_admin_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.ik.myapplication.AdminPage">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="294dp"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginBottom="10dp">

        <EditText
                android:id="@+id/put_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Salary"
                android:inputType="number"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        <Button
                android:id="@+id/admin_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="LOGOUT" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        <Button
                android:id="@+id/EditUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/admin_logout"
                android:text="Modify Accounts"/>
        <Spinner
                android:layout_width="215dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp" android:id="@+id/statue"
                android:layout_below="@+id/put_salary" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <TextView
            android:text="New User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textSize="24sp"/>

    <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true">

        <EditText
                android:id="@+id/input_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="58dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"/>

        <Button
                android:id="@+id/put_new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/input_email"
                android:text="register"/>

        <EditText
                android:id="@+id/input_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Password"
                android:layout_below="@+id/input_username" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginTop="6dp" android:inputType="textPassword"/>

        <EditText
                android:id="@+id/input_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="2nd Password"
                android:layout_below="@+id/input_password" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginTop="14dp"
                android:inputType="textPassword"/>
        <EditText
                android:id="@+id/input_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/input_password2" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginTop="11dp"/>

    </RelativeLayout>

</RelativeLayout>

