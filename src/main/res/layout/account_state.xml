<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_state" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="95dp"
            app:layout_constraintEnd_toStartOf="@+id/state_state" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/state_state" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="184dp"
    />
    <Button
            android:text="BLOCK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/state_block" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp" android:layout_marginEnd="16dp"/>
    <Button
            android:text="DELETE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/state_delete" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="140dp" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/state_edit"
            app:layout_constraintStart_toEndOf="@+id/state_state"
            android:layout_marginStart="80dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
    />
</android.support.constraint.ConstraintLayout>